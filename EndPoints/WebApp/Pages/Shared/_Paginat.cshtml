@model Application.Utils.BaseFilter
@if (Model.PageCount > 1)
{
    <div style="padding:10px">
        <ul class="pagination m-0">
            @if (Model.CurrentPage > 1)
            {
                <li class="previous page-item">
                    <a class="page-link" onclick="changePage('@(Model.CurrentPage-1)')" href="#">قبلی</a>
                </li>
            }
            else
            {
                <li class="previous page-item disabled">
                    <a class="page-link" href="javascript:void(0)">قبلی</a>
                </li>
            }
            @for (var i = Model.StartPage; i <= Model.EndPage; i++)
            {
                <li class="page-item @((i==Model.CurrentPage?"active":""))">
                    <a class="page-link" onclick="changePage('@i')" href="javascript:void(0)">@i</a>
                </li>
            }
            @if (Model.PageCount <= Model.CurrentPage)
            {
                <li class="next page-item disabled">
                    <a class="page-link" href="javascript:void(0)">بعدی</a>
                </li>
            }
            else
            {
                <li class="next page-item">
                    <a class="page-link" onclick="changePage('@(Model.CurrentPage+1)')" href="#">بعدی</a>
                </li>
            }
        </ul>
    </div>
}